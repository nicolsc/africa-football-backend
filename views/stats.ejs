<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Support stats</title>
<!--<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>-->
    <script type="text/javascript" src="/js/jquery.js"></script>    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <h1>Connection stats</h1>
    <% if (stats){%>
      <% if (stats.graph && stats.graph.length){%>
        <pre>
          <% stats.graph.forEach(function(item){%>
            <%= item.date+' : '+item.count%>
          <% });%>
        </pre>
      <% } %>
      <% if (stats.paths && stats.paths.length){%>
      <div class='float left'>
        <h2>Popular request</h2>
        <table id="stats-paths">
          <thead>
            <tr>
              <th>Path</th>
              <th>Hits</th>
            </tr>
          </thead>
          <tbody>
          <% stats.paths.forEach(function(item){%>
            <tr class='stat-path'>
              <td><%=item.path%></td>
              <td><%=item.count%></td>
            </tr>

          <%}); %>
          </tbody>
        </table>
      </div>
      <% } %>
      <% if (stats.dates && stats.dates.length){%>
      <div class='float left'>
        <h2>Requests by date</h2>
        <table id="stats-dates">
          <thead>
            <tr>
              <th>Date</th>
              <th>Hits</th>
            </tr>
          </thead>
          <tbody>
          <% stats.dates.forEach(function(item){%>
            <tr class='stat-path'>
              <td><%=item.date%></td>
              <td><%=item.count%></td>
            </tr>

          <%}); %>
          </tbody>
        </table>
      </div>
      <% } %>
       <% if (stats.hours && stats.hours.length){%>
      <div class='float left'>
        <h2>Requests by hours</h2>
        <table id="stats-hours">
          <thead>
            <tr>
              <th>Hour</th>
              <th>Hits</th>
            </tr>
          </thead>
          <tbody>
          <% stats.hours.forEach(function(item){%>
            <tr class='stat-path'>
              <td><%=item.hour%></td>
              <td><%=item.count%></td>
            </tr>

          <%}); %>
          </tbody>
        </table>
      </div>
      <% } %>
    <% }
    else{%>
      <h3>Nothing yet</h3>
    <%}%>
  </body>
</html>